<div class="modal fade" id="exampleModalCenter" style="overflow-y:auto;" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:450px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><h4>Alert</h4></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="content" class="modal-body">

            </div>
            <div class="modal-footer">
                <button id="close" type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                @*<button id="Success" type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">

    function ErrorAlert(btn, vmsg) {
     
        $("#content").html('<h4>' + vmsg + '</h4>');
        $(btn).attr('data-toggle', 'modal');
        $(btn).attr('data-target', '#exampleModalCenter');
        
    }

</script>
