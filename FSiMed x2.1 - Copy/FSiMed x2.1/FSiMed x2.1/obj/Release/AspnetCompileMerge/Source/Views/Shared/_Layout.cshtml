<!DOCTYPE html>
<html>
<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/StyleSheets/StyleSheetMain.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#lblUserName").hide();
            $("#btnHamBurger").hide();
            $(".cross").hide();
            $(".menu").hide();
            $(".hamburger").click(function () {
                $(".menu").slideToggle("slow", function () {
                    $(".hamburger").hide();
                    $(".cross").show();
                });
            });

            $(".cross").click(function () {
                $(".menu").slideToggle("slow", function () {
                    $(".cross").hide();
                    $(".hamburger").show();
                });
            });
        });
    </script>
</head>
<body>

    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        if (Session["User_Id"] != null)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    $("#btnHamBurger").show();
                    $("#lblUserName").show();
                    $("#lblUserName").text('Welcome - @Session["User_Name"]');
                });
            </script>
        }
    }
    <button id="btnHamBurger" class="hamburger">&#9776;</button>
    <button id="btnCross" class="cross">&#735;</button>

    <div class="menu">

        <ul>
            <a href="#"><li>LINK ONE</li></a>
            <a href="#"><li>LINK TWO</li></a>
            <a href="#"><li>LINK THREE</li></a>
            <a href="#"><li>LINK FOUR</li></a>
            <a href="#"><li>LINK FIVE</li></a>
            <a href="#"><li>LINK ONE</li></a>
            <a href="#"><li>LINK TWO</li></a>
            <a href="#"><li>LINK THREE</li></a>
            <a href="#"><li>LINK FOUR</li></a>
            <a href="#"><li>LINK FIVE</li></a>
        </ul>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FSiMed x2.1", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
                @Html.Label("UserName", htmlAttributes: new { @id = "lblUserName", @Text = "", @class = "navbar-brand", @align = "center", @coalspan = "1", @visible = "False" })
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
